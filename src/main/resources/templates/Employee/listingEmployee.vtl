<html>
  <head>
    <title>Empleados</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <script src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js'></script>
    <script src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js'></script>
  </head>
  <body>
    <div class="container">
    <h1>Lista de empleados</h1>
    <p id = "respuesta">$respuesta</p>
    <script type="text/javascript">
   
    </script>


    <hr class="intro-divider">
         	<ul class="list-inline intro-social-buttons">                    
          <li>
          	<a href='/createNewEmployee' type='button' class="btn btn-default btn-lg">Crear nuevo empleado</a>        
          </li>
        </ul>
    <table class="table">
    	<thead>
    	 <th>CI</th>
    	 <th>Nombre</th>
    	 <th>Direccion</th>
    	 <th>Tipo de empleado</th>
    	 <th>Detalle</th>
    	 <th>Pagos</th>
    	</thead>
    	<tbody>
        	#foreach ($employee in $employees)
        	<tr>
			    <td>$employee.getEmployeeId().toString()</td>
			    <td>$employee.getName().toString()</td>
			    <td>$employee.getAddress().toString()</td>
			    <td>$employee.getTypeEmployee().toString()</td>
			    <td><a href="employees/$employee.getEmployeeId()">Ver</a><td>
			    <td><a href="pay/show/$employee.getEmployeeId()">Ver papeleta de pago</a><td>			
			</tr>    
			#end
		</tbody>
		<table>
     </div>
     	<ul class="list-inline intro-social-buttons">                    
          <li>
            <a href='/' type='button' class="btn btn-default btn-lg">Atras</a>
          </li>
        </ul>
  </body>
</html>