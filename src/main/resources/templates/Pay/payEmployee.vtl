<!DOCTYPE html>
<html>
  <head>
    <title>Papeleta de Pago</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
  
    <div class="container">
      <div class="row">
        <h1>Pago Total</h1>
        <hr />
        <br>
      </div>
      <div class="row">
        <h3>CI: ${employee.getEmployeeId()}</h3>
        <h3>Nombre: ${employee.getName()}</h3>
        <h3>Dirección: ${employee.getAddress()}</h3>
        
        
      </div><br>
      
      #if (${employee.getTypeEmployee()}=="Por hora")
        <div class="row">
        <h2>Pago Por Hora<h2><hr />
        <h3>Monto Hora: ${employee.getPaymentClassification().getHourlyRate()}</h3>
        <h3>Total: ${total}</h3>

      <br>
      </div>
      #end
      #if (${employee.getTypeEmployee()}=="Con comision")
        <div class="row">
        <h2>Pago por comisión<h2><hr />
        <h3>Monto Semanal: ${employee.getPaymentClassification().getMonthlySalary()}</h3>
        <h3>Comisión: ${employee.getPaymentClassification().getCommissionRate()}</h3>
        <h3>Total: ${total}</h3>
        
      <br>
      </div>
      #end
      #if (${employee.getTypeEmployee()}=="Salariado")
        <div class="row">
        <h2>Salario Fijo<h2><hr />
        <h3>Salario: ${employee.getPaymentClassification().getSalary()}</h3>
        <h3>Total: ${total}</h3>
      <br>
      </div>
      #end
      
      <div class="row">
        <ul class="list-inline intro-social-buttons">                    
              <li>
                <a href='/showAllEmployees' type='button' class="btn btn-default btn-lg">Atras</a>
              </li>
          </ul>
      </div>
          
      
    </div>
    
    
        
  </body>
</html>